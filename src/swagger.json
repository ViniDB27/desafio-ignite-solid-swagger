{
    "openapi": "3.0.0",
    "info": {
        "title": "Atlas",
        "description": "Essa é uma documentação sobre Atlas API",
        "version": "1.0.0",
        "contact": {
            "email": "suporte@desafio.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "users"
                ],
                "summary": "Crate user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "exaple": {
                                    "name": "Jhon Doe",
                                    "description": "jhon@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "User aleady exist"
                    }
                }
            },
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "List all users",
                "description": "List all users",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "user_id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "patch": {
                "tags": [
                    "users"
                ],
                "summary": "Turn user admin",
                "description": "Turn user admin",
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            },
            "get": {
                "tags": [
                    "users"
                ],
                "summary": "Get a user",
                "description": "Get a user",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    }
}